<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:orientation="vertical"
   >
      <otus.homework.customview.DiagramViewGroup
          android:id="@+id/my_view_group"
          android:layout_width="match_parent"
          android:layout_height="match_parent">

            <otus.homework.customview.MyDiagrammView
                android:id="@+id/my_custom_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_diagram_width="100"
                app:layout_all_margin="100"
             />

            <otus.homework.customview.DetailsGraphView
                android:id="@+id/my_custom_details_graph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

      </otus.homework.customview.DiagramViewGroup>











</androidx.appcompat.widget.LinearLayoutCompat>